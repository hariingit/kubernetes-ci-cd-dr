pipeline {
    agent any
    stages {
        stage('Deploy to Green') {
            steps {
                sh 'kubectl apply -f green-deployment.yaml'
            }
        }
        stage('Verify Ingress') {
            steps {
                sh 'kubectl get ingress -n production-namespace'
                sh 'kubectl describe ingress example-ingress -n production-namespace'
            }
        }
        stage('Patch Ingress') {
            steps {
                sh 'kubectl patch ingress/example-ingress -n production-namespace --type=merge --patch-file patch-green.json'
            }
        }
        stage('Verify Green') {
            steps {
                sh 'kubectl get deployments -l environment=green -n production-namespace'
            }
        }
        stage('Rollback to Blue') {
            steps {
                catchError {
                    sh 'kubectl patch ingress/example-ingress -n production-namespace --type=merge --patch-file patch-blue.json'
                }
            }
        }
    }
    post {
        failure {
            sh 'kubectl patch ingress/example-ingress -n production-namespace --type=merge --patch-file patch-blue.json'
        }
    }
}
